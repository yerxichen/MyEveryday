<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 自定义Dialog -->
    <style name="Custom_Progress" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="font_theme_sm">
        <item name="fontsize_1">10sp</item>
        <item name="fontsize_2">12sp</item>
        <item name="fontsize_3">14sp</item>
        <item name="fontsize_4">35sp</item>
    </style>
    <style name="font_theme_md">
        <item name="fontsize_1">14sp</item>
        <item name="fontsize_2">16sp</item>
        <item name="fontsize_3">18sp</item>
        <item name="fontsize_4">40sp</item>
    </style>
    <style name="font_theme_lg">
        <item name="fontsize_1">18sp</item>
        <item name="fontsize_2">20sp</item>
        <item name="fontsize_3">22sp</item>
        <item name="fontsize_4">50sp</item>
    </style>
    <!-- 为相应的控件设置style -->
    <style name="simal_text">
        <item name="android:textSize">?attr/fontsize_1</item>
    </style>
    <style name="list_text">
        <item name="android:textSize">?attr/fontsize_2</item>
    </style>
    <style name="title_text">
        <item name="android:textSize">?attr/fontsize_3</item>
    </style>
    <style name="khx_text">
        <item name="android:textSize">?attr/fontsize_4</item>
    </style>
</resources>
